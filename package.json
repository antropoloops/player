{
  "name": "atpls-player",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:types": "rm -rf dist && tsc --noUnusedLocals",
    "eject": "react-scripts eject",
    "lint": "tslint --fix 'src/**/*.{ts,tsx}'"
  },
  "dependencies": {
    "@emotion/core": "^10.0.17",
    "@emotion/styled": "^10.0.17",
    "@types/chroma-js": "^1.4.3",
    "@types/d3": "^5.7.2",
    "@types/debug": "^4.1.5",
    "@types/jest": "^24.0.18",
    "@types/lodash.debounce": "^4.0.6",
    "@types/node": "^12.7.5",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/react-router-dom": "^5.1.0",
    "@types/topojson": "^3.2.2",
    "chroma-js": "^2.0.6",
    "d3": "^5.12.0",
    "d3-geo-projection": "^2.7.0",
    "debug": "^4.1.1",
    "husky": "^3.0.8",
    "lint-staged": "^9.4.1",
    "lodash": "^4.17.15",
    "lodash.debounce": "^4.0.8",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-router-dom": "^5.1.0",
    "react-scripts": "3.1.2",
    "screenfull": "^5.0.0",
    "topojson": "^3.0.2",
    "typescript": "^3.6.3"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "singleQuote": false,
    "semi": true,
    "newline-before-return": true,
    "no-duplicate-variable": [true, "check-parameters"],
    "no-var-keyword": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": ["tslint --fix", "prettier --write", "git add"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test:types"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [">0.2%", "not dead", "not op_mini all"],
    "development": ["last 1 chrome version", "last 1 firefox version", "last 1 safari version"]
  },
  "devDependencies": {
    "serverless": "^1.53.0",
    "source-map-explorer": "^2.0.1",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^4.1.0"
  }
}
